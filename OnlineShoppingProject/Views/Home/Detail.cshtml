
@{
    ViewBag.Title = "Detail";
}

<section>
    <div class="wrapper">
        <div class="out-wrap">
            <div class="product-title-container">
                <h4 class="product-title">New Season!!! On Sale!!!</h4>
            </div>
            <div class="in-wrap d-flex">
                <div class="img-content">
                    <img id="expandedImg" class="img-size" src="~/Content/Image/t-shirtb.jpg" style="width:100%">
                    <div id="imgtext"></div>
                </div>
                <div class="img-info">
                    <h2 class="playfair padding">New Season T-shirt</h2>
                    <h4 class="playfair padding">149.99 TL</h4>
                    <h4 id="font-size" class="playfair">Color</h4>
                    <div class="rating padding">
                        <div class="row">
                            <div class="column">
                                <img src="~/Content/Image/t-shirtb.jpg" alt="#" style="width:100%" onclick="myFunction(this);">
                            </div>
                            <div class="column">
                                <img src="~/Content/Image/t-shirtm.jpg" alt="#" style="width:100%" onclick="myFunction(this);">
                            </div>
                            <div class="column">
                                <img src="~/Content/Image/t-shirts.jpg" alt="#" style="width:100%" onclick="myFunction(this);">
                            </div>
                        </div>
                        <a href="#" id="a-item-selector">Comments(1)</a><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star-half-stroke"></i>
                    </div>
                    <div class="custom-select">
                        <select id="size">
                            <option value="C">Choose Your Size</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                            <option value="XXL">XXL</option>
                        </select>
                    </div>
                    <p><button>Add to Cart</button></p>
                </div>
            </div>
        </div>
        <hr>
    </div>
</section>

